@using System.Globalization
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        @CultureInfo.CurrentCulture.TwoLetterISOLanguageName.ToUpper()
    </button>
    <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" onclick="setCulture('en'); return false;">English</a></li>
        <li><a class="dropdown-item" onclick="setCulture('tr'); return false;">Türkçe</a></li>
    </ul>
</div>