@model UI.Web.Areas.VendorPanel.Models.NewProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <small class="text-muted">0% ~ 100%</small>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategoryId" class="control-label"></label>
                <select asp-for="SubCategoryId" class="form-select" asp-items="ViewBag.SubCategories">
                    <option value="">-- Select Subcategory --</option>
                </select>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands">
                    <option value="">-- Select Brand --</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModelId" class="control-label"></label>
                <select asp-for="ProductModelId" class="form-select" asp-items="ViewBag.ProductModels">
                    <option value="">-- Select Model --</option>
                </select>
                <span asp-validation-for="ProductModelId" class="text-danger"></span>
            </div>
            <div class="form-group" id="fileInputs">
                <label asp-for="Thumbnail" class="control-label"></label>
                <input asp-for="Thumbnail" class="form-control" onchange="addFileInput(this)" />
                <span asp-validation-for="Thumbnail" class="text-danger"></span>
            </div>
            <div id="attrInputs"></div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" onclick="addAttributeInput()">Add Attribute</button>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script>
        const addFileInput = (input) => {
            if(input.files.length === 0) return;
            if(input.dataset.added === "true") return;

            input.dataset.added === "true"

            const newInput = document.createElement('input')
            newInput.type = "file"
            newInput.name = "Images"
            newInput.classList.add("form-control")
            newInput.onchange = function() {
                addFileInput(this)
            }

            document.getElementById("fileInputs").appendChild(newInput)
        }

        let attrIndex = 0;
        const addAttributeInput = () => {
            const div = document.createElement("div")
            div.classList.add('input-group')
            div.innerHTML = `
                <span class="input-group-text">Key:</span>
                <input type="text" class="form-control" name="Attributes[${attrIndex}].Key">
                <span class="input-group-text">Value:</span>
                <input type="text" class="form-control" name="Attributes[${attrIndex}].Value">`
            document.getElementById('attrInputs').appendChild(div)
            attrIndex++
        }
    </script>
}
