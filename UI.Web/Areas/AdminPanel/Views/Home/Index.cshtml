@model HomeIndexViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="row g-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Categories</h5>
            </div>
            <div class="card-body p-0">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    @foreach (var item in Model.Categories)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#category-@item.Id" aria-expanded="false" aria-controls="category-@item.Id">
                                    @(item.Id + ". " + item.Name)
                                </button>
                            </h2>
                            <div id="category-@item.Id" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var sub_item in Model.SubCategories.Where(x=>x.ParentCategory.Id == item.Id))
                                        {
                                            <li class="list-group-item">@sub_item.Id. @sub_item.Name</li>
                                        }
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Product Models</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductModels)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Brands</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Brands)
                        {
                            <tr>
                                <td>
                                    <img class="img-thumbnail" src="@item.Logo" alt="@item.Name" style="width:64px; height:64px;" />
                                </td>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

